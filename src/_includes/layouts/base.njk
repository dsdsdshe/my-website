<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} · {% endif %}{{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <meta name="theme-color" content="#0b4ad8" />
    <link rel="icon" href="{{ "/favicon.svg" | url }}" type="image/svg+xml" />
    <link rel="stylesheet" href="{{ "/styles.css" | url }}" />
    <meta property="og:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ site.baseUrl or '/' }}" />
  </head>
  <body>
    <a class="skip-link" href="#content">Skip to content</a>

    {% include "components/nav.njk" %}

    <main id="content" class="container">
      {{ content | safe }}
    </main>

    {% include "components/footer.njk" %}
    <script src="{{ "/assets/js/site.js" | url }}" defer></script>
  </body>
  </html>
