<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} · {% endif %}{{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <meta name="theme-color" content="#0b4ad8" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="/styles.css" />
    <meta property="og:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ site.baseUrl or '/' }}" />
  </head>
  <body>
    <a class="skip-link" href="#content">Skip to content</a>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href="/">{{ site.title }}</a>
        <nav aria-label="Primary">
          <ul class="nav">
            {% for item in site.nav %}
            <li><a href="{{ item.url }}">{{ item.label }}</a></li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </header>

    <main id="content" class="container">
      {{ content | safe }}
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>
          © <span id="year"></span> {{ site.title }}.
          <a href="{{ site.repo_url }}" rel="noopener">Source</a>
        </p>
      </div>
    </footer>

    <script>
      document.getElementById('year').textContent = new Date().getFullYear();
    </script>
  </body>
  </html>

