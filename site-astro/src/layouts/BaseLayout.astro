---
import SiteHeader from "~/components/SiteHeader.astro";
import SiteFooter from "~/components/SiteFooter.astro";
const { title = 'MindQuantum', description = 'Open-source quantum computing framework by MindSpore.' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0b4ad8" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="/tokens.css" />
    <style>
      body { margin: 0; font: 16px/1.6 system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji"; background: rgb(var(--mq-color-surface)); color: rgb(var(--mq-color-text)); }
      main { width: min(1100px, 92%); margin-inline: auto; padding: 32px 0; }
      .hero { display: grid; grid-template-columns: 1.2fr 1fr; gap: 24px; padding: 28px 0 36px; align-items: center; }
      @media (max-width: 900px) { .hero { grid-template-columns: 1fr; } }
      .eyebrow { text-transform: uppercase; letter-spacing: .08em; font-weight: 600; color: rgb(var(--mq-color-text-muted)); margin: 0 0 6px; font-size: 0.9rem; }
      h1 { font-size: clamp(2.2rem, 3.2vw + 1rem, 3.6rem); margin: 0 0 10px; line-height: 1.1; background: linear-gradient(135deg, rgb(var(--mq-color-brand-600)), rgb(var(--mq-color-brand-400))); -webkit-background-clip: text; background-clip: text; color: transparent; }
      p { color: rgb(var(--mq-color-text-muted)); }
      .cta { display: flex; gap: 10px; flex-wrap: wrap; margin-top: 12px; }
      .btn { display: inline-block; text-decoration: none; font-weight: 600; border-radius: 10px; padding: 8px 12px; }
      .btn.primary { color: #fff; background: rgb(var(--mq-color-brand-600)); box-shadow: 0 1px 0 rgba(0,0,0,.03), 0 6px 16px rgba(11,74,216,.18); }
      .btn.secondary { color: rgb(var(--mq-color-text)); background: rgb(var(--mq-color-surface-alt)); border: 1px solid rgb(var(--mq-color-border)); }
      .card { border: 1px solid rgb(var(--mq-color-border)); border-radius: var(--mq-radius); padding: 16px; background: rgb(var(--mq-color-surface-elev)); }
      .cards { display: grid; gap: 16px; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); }
      .code-card { border: 1px solid rgb(var(--mq-color-border)); border-radius: 14px; background: rgb(var(--mq-color-surface-elev)); overflow: hidden; box-shadow: 0 8px 30px rgba(0,0,0,.06); }
      .code-head { display: flex; align-items: center; gap: 6px; padding: 6px 10px; border-bottom: 1px solid rgb(var(--mq-color-border)); background: rgb(var(--mq-color-surface-alt)); color: rgb(var(--mq-color-text-muted)); font-size: .9rem; }
      .dot { width: 10px; height: 10px; border-radius: 50%; background: #ff5f56; display: inline-block; }
      .dot + .dot { background: #ffbd2e; }
      .dot + .dot + .dot { background: #27c93f; }
      code { background: rgb(247 247 251); color: #1f2937; border-radius: 6px; padding: .1rem .3rem; }
      pre code { display: block; padding: 14px; overflow: auto; border-radius: 12px; }
    </style>
  </head>
  <body>
    <SiteHeader />
    <main>
      <slot />
    </main>
    <SiteFooter />
  </body>
  <link rel="stylesheet" href="/tokens.css" />
</html>

